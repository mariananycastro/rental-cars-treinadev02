<h3> Filiais </h3>

<p><%= link_to "Cadastrar Nova Filial", new_subsidiary_path %><p>

<% if @subsidiaries.empty? %>
    <p> Nao tem filial cadastrada </p>
<% end %>

<% @subsidiaries.each do |subsidiary| %>
    <p>
    <%= link_to subsidiary.name, subsidiary_path(subsidiary) %> 
    <%= link_to 'Excluir', subsidiary_path(subsidiary), method: :delete, data: { confirm: 'Are you sure?' } %>
                  
    </p>

    <!-- ao inves do path como Ã© um show -- subsidiary (que Ã© um objeto) -->
<% end %>