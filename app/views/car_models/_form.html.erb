<p> Formulario </p>

<% if @car_model.errors.any? %>
    <p>Você deve corrigir os seguintes erros:</p>
  <ul>
  <% @car_model.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>


<%= form_with(model: @car_model, local:true) do |f| %> 
    <%= f.label :name, 'Modelo:'%>
    <%= f.text_field :name %>

    <%= f.label :motorization, 'Motorização:'%>
    <%= f.text_field :motorization %>

    <%= f.label :year, 'Ano:'%>
    <%= f.text_field :year %>

    <%= f.label :fuel_type, 'Combustivel:'%>
    <%= f.text_field :fuel_type %>

    <%= f.label :manufacturer, 'Fabricante:'%>
    <%= f.collection_select(:manufacturer_id, @manufacturers, :id, :name) %>
    
    <%= f.label :car_category_id, 'Categoria:'%>
    <%= f.collection_select(:car_category_id, @car_categories, :id, :name) %>
    
    <%= f.submit 'Enviar' %>
<% end %>

<p><%= link_to 'Voltar', root_path %></p>