<% end %>


<p><%= link_to 'Voltar', root_path %></p>
<p><%= link_to 'Criar nova Categoria', new_car_category_path%></p>


<h1>Categorias de Carro</h1>
<table>
  <th>
    <td>Nome</td>
  </th>
  <% @car_categories.each do |category| %>
