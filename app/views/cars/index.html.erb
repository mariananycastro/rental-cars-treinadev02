<h1> Carros </h1>

<p><%= link_to 'Cadastrar Novo Carro', new_car_path %></p>

<% if @cars.empty? %>
    <p> Nenhum carro cadastrado <p>
<% end %>

<% @cars.each do |car| %>
    <p>
    <%= link_to car.car_model_name, car %>               
    
    <%= link_to 'Excluir', car_path(car), method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
<% end %>


<p><%= link_to 'Voltar', root_path %></p>